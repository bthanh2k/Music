<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
<RelativeLayout
    android:layout_width="269dp"
    android:layout_marginTop="7dp"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/mSerial"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="1"
        android:textSize="13sp" />

    <es.claucookie.miniequalizerlibrary.EqualizerView
        android:id="@+id/mEqualizer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        app:animDuration="3500" />

    <TextView
        android:id="@+id/mMusicName"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/mSerial"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:text="Music Name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mMusicDuration"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_below="@id/mMusicName"
        android:layout_alignStart="@id/mMusicName"
        android:layout_alignEnd="@id/mMusicName"
        android:gravity="left|top"
        android:text="Music Duration"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/mOption"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/mMusicName"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/ic_more_vertical" />
</RelativeLayout>
</LinearLayout>